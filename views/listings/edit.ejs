<!-- bolierplate inject -->
    <%- layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col offset-2">
    <h1>Edit the listing</h1>
    <form method="POST" action="/listings/<%= listing.id  %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
       <div class="div">
        <label for="title" class="form-label">Title</label>
         <input type="text" name="listing[title]" id="title" value="<%= listing.title %>" class="form-control" required> <br>
          <div class="invalid-feedback">Please enter the Title </div>
       </div>
       <div class="div">
        <label for="description" class="form-label">Description</label>
         <textarea name="listing[description]"class="form-control" id="description" required ><%= listing.description  %></textarea> 
          <div class="invalid-feedback">Please enter the Short Description </div>
       </div>
         <div>
            <h4>Original Image</h4>
            <img src="<%=originalimageurl  %>" alt="">
         </div>
       <div class="div">
        <label for="image" class="form-label">Upload New Image</label>
         <input type="file" name="listing[image]" class="form-control" id="image" >
          <div class="invalid-feedback">Please enter the valid Image-Link</div>
       </div>
     <div class="row">
          <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
          <input type="number" name="listing[price]"  class="form-control" id="price" value="<%= listing.price %>" required>  <div class="invalid-feedback">Please enter the valid Price </div>
       </div>
    <div class="md-3 col-md-8">
        <label for="country" class="form-label">Country</label>
           <input type="text" name="listing[country]" class="form-control" id="country"value="<%= listing.country %>" required>  <div class="invalid-feedback">Please enter the country </div>
    </div>
     </div>
     <div class="div">
        <label for="location" class="form-label">Location</label>
          <input type="text" name="listing[location]" class="form-control" id="location" value="<%= listing.location %>" required> <div class="invalid-feedback">Please enter the location</div>
     </div>
    

      <div class="text-center">
         <button type="submit" class="btn btn-dark mt-3 mb-3">submit</button>
      </div>
    </form>
    </div>
</div>