<!-- bolierplate inject -->
<% layout("/layouts/boilerplate") %>
<!-- acessing the token in script for using in the map.js -->
 <script>
  const mapToken= "<%= process.env.MAP_TOKEN%>"
  const listing= <%- JSON.stringify(listing)%>
 </script>


<div class="row mt-3">
  <div class="col-8 offset-3">
      <h1><b><%= listing.title %></b></h1>
  </div>
<div class="card col-6 offset-3 show-card listing-card">
  <div class="card listing-card " >
  <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
  <p class="mt-2 ms-2"><b><i>property owned by</i></b> :<i><%= listing.owner.username  %></i></p>
  <div class="card-body">
    <p class="card-text">
       <br>
      <b>Description : </b><%= listing.description %> <br>
        <b>Price : </b> &nbsp;&#8377;<%= listing.price.toLocaleString("en-IN") %> / night <br>
      <b>Location : </b><%= listing.location %> <br>
      <b>Country : </b> <%= listing.country %>
    </p>
  </div>
</div>
</div>      
<% if(currUser && listing.owner._id.equals(currUser._id)) {%>
   <div class="btns">
      <a href="/listings/<%=listing.id %>/edit" class="btn btn-dark col-md-1 offset-3 edit-btn">Edit</a>

     <form method="post" action="/listings/<%= listing.id%>?_method=DELETE" ><button class="btn btn-dark offset-5">DELETE</button></form>
   </div>
   <% } %>


<div class="col-8 offset-3">
  <hr>
  <% if(currUser){  %>
  <h4> Leave a comment</h4>
  <form method="post" action="/listings/<%= listing.id%>/reviews"  class="needs-validation" novalidate>
       <!-- <div class="mt-2 mb-2">
        <label for="rating" class="form-label">Rating </label>
        <input type="range" id="rating" name="review[rating]" min="1" max="5" class="form-range" >
         <div class="valid-feedback"> Rating Looks good! </div>
                       <div class="invalid-feedback">Rating is required</div>
       </div> -->


       <!-- starablity slot machine rating code -->
           <div class="mt-2 mb-2">
                 <label for="rating" class="form-label">Rating </label>
        <fieldset class="starability-slot">
  <legend>First Rating:</legend>
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>

</div>
       <div class="mb-2 mt-2">
        <label for="comment" class="form-label">Comment </label>
        <textarea name="review[comment]" id="comment" cols="70" rows="10" class="form-control" placeholder="enter the comment for this post" required></textarea>
                       <div class="invalid-feedback">Comment is required</div>
       </div>
       <button type="submit" class="btn btn-outline-dark mt-4 mb-2">Submit</button>
  </form>
  <% } %>
  <hr>
  <!-- all reviews -->
 <% if(listing.reviews.length>0) {%>
   <div class="row">
       <p><b>All Reviews</b></p>
    <% for(review of listing.reviews) {%>
         <div class="card col-5 ms-3 mb-2 ">
          <div class="card-body">
               <h5 class="card-title"> <%= review.author.username  %></h5>
                 <p class="starability-result card-text " data-rating="<%= review.rating%>"></p>
                   <p class="card-text mt-2"><%= review.comment%></p>
                  
                   
          </div>
          <!-- delete button -->
          <% if(currUser && review.author._id.equals(currUser._id)){ %>
           <form method="POST" action="/listings/<%= listing._id%>/reviews/<%= review._id%>?_method=DELETE">
                    <button type="submit" class="btn btn-dark btn-sm mb-3">Delete</button>
                   </form>
               <% } %>

         </div>
        <% } %>
        </div>
        <% } %>


</div>
<!-- map box is here -->
<div class="col-8 offset-3 mb-4">
  <h3>Where You Will Be</h3>
  <p><%=  listing.location , listing.country  %></p>
  <div id="map"></div>
</div>

  </div>

  <script src="/js/map.js"></script>

 

